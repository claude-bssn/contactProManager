<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Contact Pro Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>

<div class="container">
    <div class="row col card shadow mx-auto my-5">
        <div class="col-10 card shadow mx-auto mt-3">
            <div class="card-header text-center bg-dark text-light mt-2">
                <h3>AJOUT D'UN CONTACT</h3>
            </div>
            <div class="card-content mt-3">
                <% if (typeof errors !== "undefined") { %> 
                    <div id="erreur" class="alert alert-danger mt-3">
                        <% errors.forEach( error =>{%>
                            <p> <%= error %> </p>
                        <% }); %> 
                    </div>   
                <% } %> 
                <form class="card-body" id="new-contact-form" method="post" action="/contact/new">
                 
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Nom</label>
                        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Nom" value="<%= typeof contact == 'undefined' ? '' : contact.lastName;%>">
                    </div>

                    <div class="mb-3">
                        <label for="firstName" class="form-label">Prénom</label>
                        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Prénom" value="<%= typeof contact == 'undefined' ? '' : contact.firstName;%>">
                    </div>

                    <div class="mb-3">
                        <label for="company" class="form-label">Société</label>
                        <input type="text" class="form-control" name="company" id="company" placeholder="Société" value="<%= typeof contact == 'undefined' ? '' : contact.company;%>">
                    </div>
                    
                    <div class="mb-3">
                        <label for="address" class="form-label">Adresse</label>
                        <input type="text" class="form-control" name="address" id="address" placeholder="Adresse" value="<%= typeof contact == 'undefined' ? '' : contact.address;%>">
                    </div>
                                        
                    <div class="mb-3">
                        <label for="phone" class="form-label">Tel</label>
                        <input type="text" class="form-control" name="phone" id="phone" placeholder="Tel" value="<%= typeof contact == 'undefined' ? '' : contact.phone;%>">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">E-Mail</label>
                        <input type="text" class="form-control" name="email" id="email" placeholder="E-Mail" value="<%= typeof contact == 'undefined' ? '' : contact.email;%>">
                    </div>

                    <div class="mb-3">
                        <label for="sector" class="form-label">Secteur</label>
                        <select  name="sector" id="sector" class="form-select">
                            <option value="industrie" <%= typeof contact == 'undefined' ? '' : contact.sector == 'industrie' ? 'selected' : '';%> >Industrie</option>
                            <option value="informatique" <%= typeof contact == 'undefined' ? '' : contact.sector == 'informatique' ? 'selected' : '';%> >Informatique</option>
                            <option value="sante" <%= typeof contact == 'undefined' ? '' : contact.sector == 'sante' ? 'selected' : '';%> >Santé</option>
                            <option value="education" <%= typeof contact == 'undefined' ? '' : contact.sector == 'education' ? 'selected' : '';%> >Education</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" id="new-contact-submit" class="btn btn-dark btn-lg btn-block">AJOUTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
